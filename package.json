{
  "name": "snipped",
  "displayName": "Snipped",
  "publisher": "jeffersonlicet",
  "description": "Create fancy screenshots of your code without leaving the editor.",
  "author": {
    "name": "Jefferson Licet"
  },
  "icon": "resources/icon.png",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.57.0"
  },
  "keywords": [
    "screenshot",
    "snippet",
    "share"
  ],
  "bugs": {
    "url": "https://github.com/jeffersonlicet/snipped/issues",
    "email": "jeffersonlicet@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffersonlicet/snipped.git"
  },
  "homepage": "https://github.com/jeffersonlicet/snipped",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:snipped.start"
  ],
  "galleryBanner": {
    "color": "#5d5d5d",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snipped.start",
        "title": "Snipped > Take code screenshot",
        "icon": "resources/alternate.png"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snipped.start"
        }
      ],
      "touchBar": [
        {
          "command": "snipped.start",
          "group": "editing"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Snipped",
      "properties": {
        "snipped.enableLogo": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable Snipped Logo"
        },
        "snipped.autoCopy": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Auto Copy Screenshots"
        },
        "snipped.enablePng": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Save screenshots as PNG"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/puppeteer": "^5.4.3",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "dom-to-image-more": "^2.9.4"
  }
}
